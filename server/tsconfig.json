{
    "files": ["app.tsx"],
    "compilerOptions": {
        "target": "es5",
        "lib": ["DOM", "DOM.Iterable", "esnext", "es7"],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        // "outDir": "./build"
        "noEmit": true,
        "types": ["react/next", "react-dom/next", "@types/node"]
    },
    "include": ["./", "./**/*"],
    "exclude": ["../node_modules", "./build", "./index.ts", "app/node_modules/"]
}
