{
    "watch": [
        "server",
        "src"
    ],
    "ignore": [
        "src/**/*.d.ts",
        "*/**/tsconfig.json",
        "build"
    ],
    "ext": "ts tsx js",
    "exec": "NODE_ENV=development TS_NODE_FILES=true node --inspect=0.0.0.0 ./server/index.ts",
    "watchOptions": {
        "legacyWatch": true
    }
}